<form class="darktxt" action="/language" method="POST" role="form">
<legend>Language preference</legend>
  <select class="darktxt" name="language" onchange="this.form.submit()">
    <option class="darktxt" value="" selected="selected" hidden="hidden">{{current}}</option>
    <option class="darktxt" value="en">English</option>
    <option class="darktxt" value="fr">French</option>
  </select>
</form>

